{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OSD downloader",
  "version": "0.2.0",
  "identifier": "com.osd-downloader-sutsoa.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OSD Downloader",
        "width": 800,
        "height": 600,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "minWidth": 700,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/yt-dlp",
      "bin/ffmpeg",
      "bin/ffprobe",
      "bin/ffplay"
    ]
  }
}